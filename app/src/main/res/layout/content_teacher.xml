<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".activity.teacher.TeacherActivity"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_margin="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            tools:text="ФИО преподавателя"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/teacher_rank"
            android:layout_width="match_parent"
            tools:text="Должность"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignStart="@id/teacher_name"
            android:layout_marginTop="5dp"
            android:layout_below="@id/teacher_name"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/teacher_chair"
            android:layout_width="match_parent"
            tools:text="Кафедра"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignStart="@id/teacher_rank"
            android:layout_marginTop="5dp"
            android:layout_below="@id/teacher_rank"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
