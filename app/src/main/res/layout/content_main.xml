<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_main"
    tools:context=".activity.main.MainActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/teacher_name"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            tools:text="РГЭУ (РИНХ) предоставит абитуриентам и студентам дополнительную социальную поддержку"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/teacher_rank"
            android:layout_width="match_parent"
            tools:text="26 Июня 2020"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignStart="@id/teacher_name"
            android:layout_marginTop="5dp"
            android:layout_below="@id/teacher_name"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/teacher_chair"
            android:layout_width="match_parent"
            tools:text="Кафедра"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignStart="@id/teacher_rank"
            android:layout_marginTop="5dp"
            android:layout_below="@id/teacher_rank"
            android:layout_height="wrap_content"/>

    </RelativeLayout>


</FrameLayout>
