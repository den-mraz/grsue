<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="128dp"
    android:layout_margin="5dp"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/schedule_time"
            android:layout_width="match_parent"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            tools:text="00:00 - 24:00"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/schedule_name"
            android:layout_width="match_parent"
            tools:text="Название"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignStart="@id/schedule_time"
            android:layout_marginTop="5dp"
            android:layout_below="@id/schedule_time"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/schedule_teacher"
            android:layout_width="match_parent"
            tools:text="Иванов И.И."
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignStart="@id/schedule_name"
            android:layout_marginTop="5dp"
            android:layout_below="@id/schedule_name"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/schedule_room"
            android:layout_width="match_parent"
            tools:text="Аудитория"
            android:maxLines="2"
            android:ellipsize="end"
            android:layout_alignStart="@id/schedule_teacher"
            android:layout_marginTop="5dp"
            android:layout_below="@id/schedule_teacher"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/schedule_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/schedule_room"
            android:layout_alignStart="@id/schedule_room"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:maxLines="2"
            tools:text="Тип" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>
